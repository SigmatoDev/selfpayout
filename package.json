{
  "name": "selfcheckout",
  "private": true,
  "version": "0.1.0",
  "description": "Selfcheckout SaaS platform monorepo",
  "workspaces": [
    "api",
    "packages/*",
    "super-admin",
    "retailer-web",
    "user-web"
  ],
  "scripts": {
    "dev:api": "npm --workspace=api run dev",
    "dev:super-admin": "npm --workspace=super-admin run dev",
    "dev:retailer-web": "npm --workspace=retailer-web run dev",
    "dev:user-web": "npm --workspace=user-web run dev",
    "build": "npm workspaces run build",
    "lint": "npm workspaces run lint",
    "format": "npm workspaces run format"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
